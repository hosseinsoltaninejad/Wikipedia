<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/android" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_anchor="@id/imageView"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:fabSize="mini"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_profile"
                android:src="@drawable/ic_profile"
                app:backgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:fabSize="mini"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_writer"
                app:backgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <TextView
            android:textAllCaps="true"
            android:id="@+id/txt_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hossein Soltani Nejad"/>

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"/>

    <TextView
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm an adaptable Android Developer with nearly 3 years of experience, dedicated to continuously developing, implementing, and adopting new technologies to maximize development efficiency and produce innovative applications and eager to learn approaches that let me do more complex things fast with as less bugs as possible. I'm passionate about my profession, hoping and trying to achieve my goals.
\n
\nProgramming languages: Java and Kotlin."/>

</LinearLayout>